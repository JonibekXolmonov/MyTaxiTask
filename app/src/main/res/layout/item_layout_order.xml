<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFromIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:src="@drawable/ic_circle_from"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDepartureDestination" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDepartureDestination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:paddingEnd="40dp"
            android:text="Яшнабадский район, улица Sharof Rashidov, Ташкент"
            android:textColor="#434343"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFromIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivToIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_to"
            app:layout_constraintEnd_toEndOf="@id/ivFromIcon"
            app:layout_constraintStart_toStartOf="@id/ivFromIcon"
            app:layout_constraintTop_toTopOf="@id/tvArrivalDestination" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvArrivalDestination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:paddingEnd="40dp"
            android:text="Юнусабадский район, м-в юнусабад-19, ул. дехканабад, 17"
            android:textColor="#434343"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivToIcon"
            app:layout_constraintTop_toBottomOf="@id/tvDepartureDestination" />

        <View
            android:id="@+id/viewBottom"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="#F8F8F8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvArrivalDestination" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="21:36 · 12 900 cум"
            android:fontFamily="@font/lato_regular"
            android:textColor="#434343"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/viewBottom"
            app:layout_constraintStart_toStartOf="@id/viewBottom"
            app:layout_constraintTop_toTopOf="@id/viewBottom" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRideType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="@id/viewBottom"
            app:layout_constraintTop_toTopOf="@id/viewBottom" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>